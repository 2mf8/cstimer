<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <handlers>
            <add name="php" path="*.php" verb="*" modules="FastCgiModule" scriptProcessor="D:\php\php-cgi.exe" resourceType="File" />
            <add name="phpserver" path="*.pht" verb="*" modules="FastCgiModule" scriptProcessor="D:\php\php-cgi.exe" resourceType="File" />
        </handlers>
        <defaultDocument>
            <files>
                <add value="index.php" />
            </files>
        </defaultDocument>
        <httpProtocol>
            <customHeaders>
                <remove name="X-Powered-By" />
                <add name="Connection" value="Keep-Alive" />
            </customHeaders>
        </httpProtocol>
    </system.webServer>
</configuration>
